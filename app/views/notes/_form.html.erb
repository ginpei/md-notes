<%= form_for(@note) do |f| %>
  <% if @note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
      <% @note.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p class="form-body">
    <%= f.text_field :subject, class: 'span10', placeholder: 'Subject' %><br />
    <%= f.text_area :body, class: 'span10',  %><br />
    <%= f.radio_button :visibility, Note::VISIBILITY_PUBLIC %>
    <%= f.label "#{:visibility}_#{Note::VISIBILITY_PUBLIC}", 'Public' %>
    <%= f.radio_button :visibility, Note::VISIBILITY_ANYONE %>
    <%= f.label "#{:visibility}_#{Note::VISIBILITY_ANYONE}", 'Anyone knows URL' %>
    <%= f.radio_button :visibility, Note::VISIBILITY_PRIVATE %>
    <%= f.label "#{:visibility}_#{Note::VISIBILITY_PRIVATE}", 'Private' %>
    <br />
    <%= f.submit class: 'btn btn-primary' %>
  <p>
<% end %>
